@using PWABlog.ViewModels.Adm
@model PWABlog.ViewModels.Adm.AdmCategoriaListarViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Listagem de Categorias</h3>
    </div>
    <div class="card-body">
        <a class="btn btn-primary mb-3" href="/adm/categoria/create">Criar Categoria</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CategoriaAdmCategorias cat in @Model.Categorias)
                {
                    <tr>
                        <td>@cat.Id</td>
                        <td>@cat.Nome</td>
                        <td>
                            <a class="btn btn-success btn-xs" href="/adm/categoria/edit/@cat.Id">Editar</a>
                            <a class="btn btn-danger btn-xs" href="/adm/categoria/delete/@cat.Id">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>